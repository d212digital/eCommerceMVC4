@model eCommerce.Web.ViewModels.PageViewModel

@{
    if (Model != null)
    {
        Model.PageTitle = "PP.Home.Title".LocalizedString();
        Model.PageDescription = "PP.Home.Description".LocalizedString();
        Model.PageURL = Url.Home();
        Model.PageImageURL = PictureHelper.PageImageURL("home.jpg");
    }

    <!-- Start header Area -->
    <section id="hero-area" class="header-area header-eight">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-12 col-12">
                    <div class="header-content">
                        <h1>SWS Online Shop.</h1>
                        <p>
                            Here you can purchase our recylable shrink films, machine parts and some ex demo
                            machinery. Looking for a more bespoke machine/service visit our main website. 
                        </p>
                        <div class="button">
                            <a href="/en/search" class="btn primary-btn">Start Browsing</a>
                            <a href="/web" class="btn primary-btn">Visit Main Website</a>
                        </div>

                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-12">
                    <div class="header-image">
                        <img src="~/Content/templates/sws-frontend/assets/images/header/hero-image3.png" alt="#" />
                    </div>
                </div>
            </div>
        </div>
    </section>

    //Html.RenderAction("HomeSliders", "Home");
    Html.RenderAction("FeaturedCategories", "Categories", new { recordSize = 3, isForHomePage = true });
    Html.RenderAction("ProductsByFeaturedCategories", "Categories", new { recordSize = 3 });
}



<div class="container-fluid my-4 pb-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="loading-more">
                <i class="fas fa-search"></i>
                <a href="@Url.SearchProducts()">
                    @("PP.Home.SearchMoreProducts".LocalizedString())
                </a>
            </div>
        </div>
    </div>
</div>

